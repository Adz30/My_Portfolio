{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18"
    }
  },
  "routes": [
    {
      "src": "/api/posts",
      "dest": "/api/posts.js"
    },
    {
      "src": "/api/page/(.*)",
      "dest": "/api/page/[slug].js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "outputDirectory": "dist"
}
