{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18"
    }
  },
  "rewrites": [
    {
      "source": "/api/posts",
      "destination": "/api/posts.js"
    },
    {
      "source": "/api/page/:slug",
      "destination": "/api/page/[slug].js"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
